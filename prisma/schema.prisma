generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model notices {
  id String @id @default(uuid())
  index Int @default(autoincrement())
  title     String   @db.VarChar(255)
  content   String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  isFixed   Boolean  @default(false)
}

model articles {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  author    String   @db.VarChar(100)
  content   String
  thumbnail Bytes?
}

model newsletters {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  author    String   @db.VarChar(100)
  content   String
  thumbnail Bytes?
}

model inquiries {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  affiliation String @db.VarChar(100)
  contact String @db.VarChar(100)
  email String @db.VarChar(100)
  other String
  termsAgreed Boolean
  sentAt DateTime @default(now()) @db.Timestamptz(6)
}

model visits {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  affiliation String @db.VarChar(100)
  contact String @db.VarChar(100)
  email String @db.VarChar(100)
  applicationDate DateTime @db.Timestamptz(6)
  visitDateTime DateTime @db.Timestamptz(6)
  headCount Int
  purposeOfFieldTrip Boolean
  purposeOfListening Boolean
  other String
  termsAgreed Boolean
  sentAt DateTime @default(now()) @db.Timestamptz(6)
}

model administrators {
  id String @id @default(uuid())
  email String @db.VarChar(100)
  password String @db.VarChar(100)
}